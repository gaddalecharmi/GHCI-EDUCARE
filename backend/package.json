{
  "name": "mindspark-backend",
  "version": "1.0.0",
  "description": "Backend API for MindSpark ADHD support application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup-project.js",
    "dev-setup": "node scripts/dev-setup.js",
    "migrate": "node scripts/migrate.js",
    "migrate:reset": "node scripts/migrate.js reset",
    "migrate:status": "node scripts/migrate.js status",
    "seed": "node scripts/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t mindspark-backend .",
    "docker:run": "docker run -p 3001:3001 mindspark-backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend"
  },
  "keywords": [
    "adhd",
    "education",
    "child-support",
    "api",
    "express",
    "postgresql"
  ],
  "author": "MindSpark Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdf-parse": "^2.1.7",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mindspark-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/mindspark-backend/issues"
  },
  "homepage": "https://github.com/your-org/mindspark-backend#readme"
}
